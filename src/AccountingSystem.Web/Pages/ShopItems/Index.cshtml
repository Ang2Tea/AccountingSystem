@page
@model AccountingSystem.Web.Pages.ShopItems.Index
@{
    ViewData["Title"] = "Товары";
}
<div>
    <a class="btn btn-primary" asp-page="ChangeShopItem" asp-route-id="">Создать</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col" hidden>Индификатор</th>
        <th scope="col"></th>
        <th scope="col">Название</th>
        <th scope="col">Категория</th>
        <th scope="col">Цена</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var shopItem in Model.ShopItems)
    {
        <tr>
            <td hidden>@shopItem.Id</td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        Действия
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-page="ChangeShopItem" asp-route-id="@shopItem.Id">Изменить</a>
                        </li>
                        <li><a asp-page="Index" asp-page-handler="delete" asp-route-id="@shopItem.Id" class="dropdown-item">Удалить</a></li>
                    </ul>
                </div>
            </td>
            <td>@shopItem.Name</td>
            <td>@(shopItem.Category?.Title ?? "Неизвестно")</td>
            <td>@shopItem.Price</td>
        </tr>
    }
    </tbody>
</table>
