@page
@model AccountingSystem.Web.Pages.ShopItems.ChangeShopItem

@{
}
<form class="mx-auto" style="width: 400px;" method="post">
    <input asp-for="@Model.ShopItem.Id" hidden/>
    <div class="form-group">
        <label class="form-label">Название</label>
        <input class="form-control" asp-for="@Model.ShopItem.Name"/>
    </div>

    <div class="form-group">
        <label class="form-label">Категория</label>
        <select class="form-select" aria-label="Категории" asp-for="@Model.ShopItem.CategoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label class="form-label">Описание</label>
        <textarea class="form-control" asp-for="@Model.ShopItem.Description"></textarea>
    </div>

    <div class="form-group">
        <label class="form-label">Цена</label>
        <input class="form-control" type="number" asp-for="@Model.ShopItem.Price"/>
    </div>

    <div class="form-group mt-3 row row-cols-auto">
        <div class="col">
            <a asp-page="Index" class="btn btn-secondary">Закрыть</a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>


