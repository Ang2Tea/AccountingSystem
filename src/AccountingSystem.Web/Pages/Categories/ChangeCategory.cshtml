@page
@model AccountingSystem.Web.Pages.Categories.ChangeCategory
@{
}

<form class="mx-auto" style="width: 400px;" method="post">
    <input asp-for="@Model.Category.Id" hidden/>
    <div class="form-group">
        <label class="form-label">Название</label>
        <input class="form-control" asp-for="@Model.Category.Title"/>
    </div>

    <div class="form-group">
        <label class="form-label">Описание</label>
        <textarea class="form-control" asp-for="@Model.Category.Description"></textarea>
    </div>

    <div class="form-group mt-3 row row-cols-auto">
        <div class="col">
            <a asp-page="Index" class="btn btn-secondary">Закрыть</a>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
</form>
